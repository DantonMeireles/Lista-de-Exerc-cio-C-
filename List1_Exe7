using System;

class Program {
  public static void Main (string[] args) {
    /*Faça o algoritmo (diagrama de blocos e português estruturado) para calcular o volume de uma esfera (VOL). O raio (R) da esfera será fornecido pelo usuário. Obs: VOL = 3.14*R 2(apresentar o volume da esfera)*/

		//volume = 4*3,14*raio^3(cubo)/3 (dividido por 3)

		double r_esfera, resultado, tt;
			

			Console.WriteLine("Qual o raio da esfera?");
				r_esfera = double.Parse(Console.ReadLine());

			tt = Math.Pow(r_esfera,2);
			
			resultado = 3.14 * tt;
				Console.WriteLine("O volume da esfera é: {0}", resultado);


		
  }
}
