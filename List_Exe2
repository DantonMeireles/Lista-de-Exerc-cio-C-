using System;

class MainClass {
  public static void Main (string[] args) {
    /*Faça o algoritmo (diagrama de blocos e português estruturado) para calcular a área (AREA) e o
perímetro (P) de uma sala, sendo que os comprimentos (L e C) são fornecidos pelo usuário. Apresente a área e o perímetro depois de calculados.*/
double l, c, area, perimetro;
		Console.WriteLine("Digite o comprimento: ");
		c = double.Parse(Console.ReadLine());
		Console.WriteLine ("O comprimento  é: {0}", c);

			Console.WriteLine("Digite a largura: ");
			l = double.Parse(Console.ReadLine());
			Console.WriteLine ("A largura é: {0}", l);

			area= l * c;

			Console.WriteLine ("A área é: {0} m²", area);

			perimetro= l + l + l + l;
			Console.WriteLine ("O perímetro é: {0} m²", perimetro);

  }
}
